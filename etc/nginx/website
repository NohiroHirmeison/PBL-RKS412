server {
    listen 443 ssl;
    server_name 192.168.16.5 www.lapulga.xyz lapulga.xyz;

    ssl_certificate /etc/nginx/ssl/pbl412/PBL412_chain.crt;
    ssl_certificate_key /etc/nginx/ssl/pbl412/PBL412.key;

    modsecurity on;
    modsecurity_rules_file /etc/nginx/modsec/main.conf;

    location / {
        proxy_pass https://192.168.11.200;
        proxy_set_header Host $host; # Forwarded host
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect off;
        add_header Permissions-Policy "geolocation=(), microphone=()";
        add_header X-Permitted-Cross-Domain-Policies "none";
        add_header Clear-Site-Data '"cookies", "storage", "cache"';
    }
}
